    <include name="View_MediaWindows_ID">
        <views>50,550,57,501,500,507,509,511,512,513,56,53,55,555,557,54,58,52,515,516,517,519,521,522,523,524,526,527,547,505,508,514,503,5048,5218,5228,5238</views>
    </include>

    <!-- VIEW FLIX / INFO -->

    <include name="Def_View_Flix_Minimal_Content">
        <param name="visible" value="$PARAM[visible]" default="true" />
        <definition>
            <control type="group">
                <visible>$PARAM[visible]</visible>

                <top>195</top>
                <left>View_SidePad</left>
                <width>NetflixPlotWidth</width>

                <!-- CLERALOGO ENABLE - CLEARLOGO NOT AVAILABLE / DISABLE -->

                <control type="group">

                    <!-- MAIN TITLE -->

                    <include content="Def_Label_View_Flix_Main_Title">
                        <param name="top" value="0" />
                    </include>

                    <!-- SUB TITLE -->

                    <include content="Def_Label_View_Flix_Sub_Title">
                        <param name="visible" value="!$EXP[View_Flix_Show_Clearlogo_Enable]" />
                        <param name="top" value="45" />
                    </include>
                    <include content="Def_Label_View_Flix_Sub_Title">
                        <param name="visible" value="$EXP[View_Flix_Show_Clearlogo_Enable]" />
                        <param name="top" value="105" />
                    </include>

                    <!-- PLOT -->

                    <include content="Def_Label_View_Flix_Plot">
                        <param name="visible" value="!$EXP[View_Flix_Show_Clearlogo_Enable]" />
                        <param name="top" value="120" />
                        <param name="height" value="176" />
                    </include>
                    <include content="Def_Label_View_Flix_Plot">
                        <param name="visible" value="$EXP[View_Flix_Show_Clearlogo_Enable] + !$EXP[Exp_View_524]" />
                        <param name="top" value="180" />
                        <param name="height" value="140" />
                    </include>
                    <include content="Def_Label_View_Flix_Plot">
                        <param name="visible" value="$EXP[View_Flix_Show_Clearlogo_Enable] + $EXP[Exp_View_524]" />
                        <param name="top" value="180" />
                        <param name="height" value="112" />
                    </include>
                </control>
            </control>
        </definition>
    </include>

    <include name="Def_Label_View_Flix_Main_Title">
        <param name="height" value="$PARAM[height]" default="46" />
        <param name="width" value="$PARAM[width]" default="100%" />
        <param name="visible" value="$PARAM[visible]" default="true" />

        <definition>
            <control type="group">
                <visible>$PARAM[visible]</visible>
                <top>$PARAM[top]</top>
                <left>$PARAM[left]</left>
                <!-- <height>$PARAM[height]</height> -->
                <width>$PARAM[width]</width>

                <!-- CLERALOGO -->

                <control type="image" description="clearlogo">
                    <height>ClearLogoTitleMaxHeight</height>
                    <width>ClearLogoTitleMaxWidth</width>
                    <aspectratio scalediffuse="true" align="left">keep</aspectratio>
                    <texture background="true">$VAR[Image_Crop_ClearLogo]</texture>
                    <animation effect="fade" start="0" end="100" time="200" delay="0" reversible="true">Visible</animation>
                    <animation effect="fade" start="100" end="0" delay="400" time="200" reversible="true">Hidden</animation>
                    <fadetime>ClearArtFadetime</fadetime>
                    <visible>$EXP[View_Flix_Show_Clearlogo_Enable]</visible>
                    <visible>$EXP[Title_Clearlogo_Available]</visible>
                </control>

                <!-- MAIN TITLE - TEXT -->

                <control type="label">
                    <include content="Def_Height" condition="$EXP[View_Flix_Show_Clearlogo_Enable]">
                        <param name="height">ClearLogoTitleMaxHeight</param>
                    </include>
                    <include content="Def_Height" condition="!$EXP[View_Flix_Show_Clearlogo_Enable]">
                        <param name="height">40</param>
                    </include>
                    <textcolor>Dark1</textcolor>
                    <font>LargeNetflix</font>
                    <label fallback="19055">$VAR[Label_View_Flix_Main_Title]</label>
                    <include condition="Skin.HasSetting(labels.autoscroll)">LabelScroll</include>
                    <visible>[$EXP[View_Flix_Show_Clearlogo_Enable] + !$EXP[Title_Clearlogo_Available]] | !$EXP[View_Flix_Show_Clearlogo_Enable]</visible>
                </control>
            </control>
        </definition>
    </include>

    <include name="Def_Label_View_Flix_Sub_Title">
        <param name="height" value="$PARAM[height]" default="46" />
        <param name="width" value="$PARAM[width]" default="100%" />
        <param name="width_condition" value="$PARAM[width_condition]" default="Skin.HasSetting(furniture.progress.circle)" />
        <param name="visible" value="$PARAM[visible]" default="true" />

        <definition>
            <control type="group">
                <visible>$PARAM[visible]</visible>
                <top>$PARAM[top]</top>
                <left>$PARAM[left]</left>
                <height>$PARAM[height]</height>

                <include content="Def_Width" condition="$PARAM[width_condition]">
                    <param name="width" value="520" />
                </include>
                <width>$PARAM[width]</width>

                <!-- SUB TITLE - FILES -->

                <control type="label">
                    <aligny>center</aligny>
                    <font>InfoNetflix</font>
                    <textcolor>PanelWhite70</textcolor>
                    <selectedcolor>PanelWhite70</selectedcolor>
                    <label>$LOCALIZE[19076] $INFO[Container(44025).NumItems,  •  , $LOCALIZE[31073]]</label>
                    <visible>Container.Content(files) | [Container.Content(movies) + String.IsEmpty(ListItem.DBType) + !$EXP[IsAnPlugin]] | Container.Content(images)</visible>
                    <visible>ListItem.IsFolder</visible>
                </control>

                <!-- SUB TITLE - PVR -->

                <control type="label">
                    <aligny>center</aligny>
                    <font>InfoNetflix</font>
                    <textcolor>PanelWhite70</textcolor>
                    <selectedcolor>PanelWhite70</selectedcolor>
                    <label>$INFO[ListItem.ChannelName]$INFO[ListItem.StartTime,  •  ,]$INFO[ListItem.EndTime, - ]$INFO[PVR.EpgEventDuration(mins),  •  , $LOCALIZE[31074]]</label>
                    <visible>String.StartsWith(ListItem.Path,pvr://channels)</visible>
                </control>

                <!-- SUB TITLE - PLUGIN -->

                <control type="label">
                    <aligny>center</aligny>
                    <font>InfoNetflix</font>
                    <textcolor>PanelWhite70</textcolor>
                    <selectedcolor>PanelWhite70</selectedcolor>
                    <label>$LOCALIZE[20094]$INFO[System.AddonVersion(Container.PluginName),  •  v ]</label>
                    <visible>$EXP[IsAnPlugin]</visible>
                    <visible>Container.Content()</visible>
                </control>

                <!-- SUB TITLE - ADDONS -->

                <control type="label">
                    <aligny>center</aligny>
                    <font>InfoNetflix</font>
                    <textcolor>PanelWhite70</textcolor>
                    <selectedcolor>PanelWhite70</selectedcolor>
                    <label>$INFO[ListItem.AddonType]$INFO[ListItem.AddonVersion,  •  v ]</label>
                    <visible>Container.Content(addons)</visible>
                </control>

                <!-- ALBUMS / SONGS -->

                <control type="label">
                    <font>InfoNetflix</font>
                    <textcolor>PanelWhite70</textcolor>
                    <selectedcolor>PanelWhite70</selectedcolor>
                    <label>$VAR[Label_View_Flix_Sub_Title_Music]</label>
                    <visible>Container.Content(albums) | Container.Content(songs) | container.content(artists)</visible>
                </control>

                <!-- IMAGES -->

                <control type="label">
                    <font>InfoNetflix</font>
                    <textcolor>PanelWhite70</textcolor>
                    <selectedcolor>PanelWhite70</selectedcolor>
                    <label>$VAR[Label_Picture]</label>
                    <visible>Container.Content(images) + !ListItem.IsFolder</visible>
                </control>

                <!-- SUB TITLE - OTHERS -->

                <control type="label">
                    <aligny>center</aligny>
                    <font>InfoNetflix</font>
                    <textcolor>PanelWhite70</textcolor>
                    <selectedcolor>PanelWhite70</selectedcolor>
                    <label>$VAR[Label_View_Flix_Sub_Title]</label>
                    <visible>![Container.Content(addons) | [$EXP[IsAnPlugin] + Container.Content()]]</visible>
                    <visible>![Container.Content(albums) | Container.Content(songs) | container.content(artists) | Container.Content(images) | String.StartsWith(ListItem.Path,pvr://channels)]</visible>
                    <visible>!container.content(files) | String.IsEqual(Container.FolderPath,playlistvideo://)</visible>
                </control>
            </control>
        </definition>
    </include>

    <include name="Def_Label_View_Flix_Plot">
        <param name="top" value="$PARAM[top]" default="100" />
        <param name="width" value="$PARAM[width]" default="100%" />
        <param name="align" value="$PARAM[align]" default="left" />
        <param name="visible" value="$PARAM[visible]" default="true" />
        <definition>
            <control type="group">
                <visible>$PARAM[visible]</visible>
                <top>$PARAM[top]</top>
                <width>$PARAM[width]</width>
                <control type="textbox">
                    <font>Tiny</font>
                    <height>$PARAM[height]</height>
                    <align>$PARAM[align]</align>
                    <textcolor>Dark2</textcolor>
                    <selectedcolor>Dark2</selectedcolor>
                    <label>$VAR[Label_Plot_Box_Video_Music]</label>
                </control>
            </control>
        </definition>
    </include>

    <include name="Def_View_Info_Circle_Progress">
        <param name="top" value="$PARAM[top]" default="360" />
        <param name="left" value="$PARAM[left]" default="516" />
        <param name="width" value="$PARAM[width]" default="155" />
        <param name="height" value="$PARAM[height]" default="155" />

        <param name="visible" value="$PARAM[visible]" default="Skin.HasSetting(furniture.progress.circle)" />
        <param name="width_condition" value="$PARAM[width_condition]" default="Skin.HasSetting(furniture.progress.circle)" />

        <definition>
            <control type="group">
                <visible>!ListItem.IsParentFolder + !String.IsEqual(ListItem.DBType,set) + !Window.IsVisible(MyMusicNav.xml) + !Window.IsVisible(MyPlaylist.xml) + !String.IsEmpty(ListItem.DBType) + !$EXP[IsYoutube]</visible>

                <visible>$PARAM[visible]</visible>

                <top>$PARAM[top]</top>
                <left>$PARAM[left]</left>
                <width>$PARAM[width]</width>
                <height>$PARAM[height]</height>

                <control type="group">
                    <control type="image" description="Back">
                        <centertop>44%</centertop>
                        <width>139</width>
                        <height>139</height>
                        <texture diffuse="diffuse/circle_progress_w139_h139.png" border="0">dialog/loading-back.png</texture>
                    </control>
                    <control type="group">
                        <visible>!ListItem.IsParentFolder</visible>
                        <visible>Container.Content(movies) | Container.Content(episodes)</visible>
                        <include>Animation_SwitchText</include>
                        <control type="image">
                            <visible>ListItem.IsResumable</visible>
                            <centertop>44%</centertop>
                            <width>139</width>
                            <height>139</height>
                            <texture diffuse="diffuse/circle_progress_w139_h139.png" colordiffuse="$VAR[Color_Highlight]">$INFO[ListItem.PercentPlayed,progress/circle/p,.png]</texture>
                        </control>
                        <control type="image">
                            <visible>String.Contains(ListItem.Overlay,OverlayWatched.png) + !ListItem.IsResumable</visible>
                            <centertop>44%</centertop>
                            <width>139</width>
                            <height>139</height>
                            <texture diffuse="diffuse/circle_progress_w139_h139.png" colordiffuse="$VAR[Color_Highlight]">progress/circle/p100.png</texture>
                        </control>
                    </control>
                </control>
                <control type="image">
                    <visible>!ListItem.IsParentFolder</visible>
                    <visible>String.IsEqual(ListItem.DBType,tvshow) | String.IsEqual(ListItem.DBType,season)</visible>
                    <width>139</width>
                    <height>139</height>
                    <centertop>44%</centertop>
                    <texture diffuse="diffuse/circle_progress_w139_h139.png" colordiffuse="$VAR[Color_Highlight]">progress/tvshows/p$INFO[ListItem.Property(WatchedEpisodePercent)].png</texture>
                    <include>Animation_SwitchText</include>
                </control>
                <control type="label">
                    <include>Animation_SwitchText</include>
                    <width>140</width>
                    <centertop>43%</centertop>
                    <align>center</align>
                    <label>$VAR[Label_Progress_Circle]</label>
                    <font>WatchedLabel</font>
                    <textcolor>Dark2</textcolor>
                </control>
            </control>
        </definition>
    </include>



</includes>
