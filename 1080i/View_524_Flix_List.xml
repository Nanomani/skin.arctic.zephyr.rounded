            <control type="group">
                <visible>$EXP[Exp_View_524] | $EXP[Exp_View_50] | $EXP[Exp_View_57]</visible>

                <visible>$PARAM[visible]</visible>

                <top>$PARAM[top]</top>
                <left>$PARAM[left]</left>
                <width>$PARAM[width]</width>
