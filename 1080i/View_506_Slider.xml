<?xml version="1.0" encoding="UTF-8"?>
<includes>

    <include name="View_506_Slider">
        <control type="group">
            <visible>Control.IsVisible(506)</visible>
            <include>Animation_Common</include>

            <include condition="!Skin.HasSetting(show.clock.date.weather.home.only) + !Skin.HasSetting(show.furniture.footer)">Furniture_Footer_Clock_Right</include>

            <control type="group">
                <top>View_Top</top>
                <left>View_SidePad</left>
                <width>1760</width>
                <height>640</height>

                <include content="Def_Widget_Image_Background">
                    <param name="colordiffuse" value="Panel" />
                </include>

                <control type="wraplist" id="506">
                    <visible>$EXP[Exp_View_506]</visible>
                    <include>Animation_Scrolltime_Views_List</include>

                    <top>0</top>
                    <left>0</left>
                    <width>1760</width>
                    <height>640</height>

                    <onup condition="!Skin.HasSetting(global.kioskmode)">9000</onup>
                    <onup condition="!Skin.HasSetting(global.kioskmode) + [Player.HasMedia | Player.Playing]">AlarmClock(GoToButtonFullScreen,SetFocus(6157),00:00,silent)</onup>
                    <ondown>1641</ondown>
                    <onleft>51</onleft>
                    <onright>51</onright>

                    <focusposition>0</focusposition>
                    <preloaditems>0</preloaditems>
                    <pagecontrol>1641</pagecontrol>
                    <orientation>horizontal</orientation>

                    <viewtype label="Slider">list</viewtype>

                    <itemlayout height="640" width="1760">
                        <control type="image">
                            <align>center</align>
                            <aspectratio scalediffuse="true">keep</aspectratio>
                            <texture background="true" diffuse="diffuse/fanart_w1760_h640.png">$VAR[Image_Fanart]</texture>
                        </control>
                    </itemlayout>
                    <focusedlayout height="640" width="1760">
                        <control type="image">
                            <texture border="12" colordiffuse="Panel">common/box.png</texture>
                        </control>
                        <control type="image">
                            <align>center</align>
                            <aspectratio scalediffuse="true">keep</aspectratio>
                            <texture background="true" diffuse="diffuse/fanart_w1760_h640.png">$VAR[Image_Fanart]</texture>
                        </control>
                    </focusedlayout>
                </control>
            </control>

            <!-- SCROLLBAR -->

            <control type="scrollbar" id="1641">
                <include content="Object_Scrollbar_Views_Horizontal">
                    <param name="scrollid" value="1641" />
                </include>
            </control>
        </control>
    </include>
</includes>
