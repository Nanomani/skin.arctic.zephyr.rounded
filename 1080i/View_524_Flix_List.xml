                    </control>
                    <control type="image">
                        <left>10</left>
                        <top>10</top>
                        <right>10</right>
                        <bottom>10</bottom>
                        <texture colordiffuse="Fallback" border="12" background="true">common/box.png</texture>
                    </control>

                    <!-- FANART  -->

                    <control type="image">
                        <left>10</left>
                        <top>10</top>
                        <right>10</right>
                        <bottom>10</bottom>
                        <fadetime>PosterFanartFadetime</fadetime>
