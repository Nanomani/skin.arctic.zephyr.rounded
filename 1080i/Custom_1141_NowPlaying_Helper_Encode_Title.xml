<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="1141">
    <visible>$EXP[Extended_Now_Playing_Is_Visible] + !String.IsEmpty(Window(Home).Property(controlsvisible))</visible>
    <visible>String.IsEmpty(Window(Home).Property(Encoded.MusicPlayer.Album)) + String.IsEmpty(Window(Home).Property(Encoded.Player.Filename)) + String.IsEmpty(Window(Home).Property(Encoded.Player.Title))</visible>

    <!-- ENCODE ALBUM / TITLE / FILENAME -->

    <onload condition="Player.HasVideo + !String.IsEmpty(VideoPlayer.DBID)">RunPlugin("plugin://script.skinvariables/?info=get_encoded_string&amp;window_id=Home&amp;window_prop=Encoded.Player.Filename&amp;&amp;$INFO[Player.Filename]")</onload>

    <onload condition="Player.HasVideo + !String.IsEmpty(VideoPlayer.DBID)">RunPlugin("plugin://script.skinvariables/?info=get_encoded_string&amp;window_id=Home&amp;window_prop=Encoded.Player.Title&amp;&amp;$INFO[Player.Title]")</onload>

    <onload condition="Player.HasAudio + !String.IsEmpty(MusicPlayer.DBID) + !String.IsEmpty(MusicPlayer.Album)">RunPlugin("plugin://script.skinvariables/?info=get_encoded_string&amp;window_id=Home&amp;window_prop=Encoded.MusicPlayer.Album&amp;&amp;$INFO[MusicPlayer.Album]")</onload>

    <controls />
</window>
