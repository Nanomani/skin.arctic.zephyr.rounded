<?xml version="1.0" encoding="UTF-8"?>
<includes>

    <include name="View_506_Slider">
        <control type="group">
            <visible>Control.IsVisible(506)</visible>

            <include condition="!Skin.HasSetting(furniture.weather.home.only) + !Skin.HasSetting(show.furniture.footer)">Furniture_Footer_Clock_Right</include>
            <include>Animation_Common</include>

            <control type="group">
                <top>PosterPad</top>
                <left>SidePad</left>
                <right>SidePad</right>
                <height>640</height>

                <control type="image">
                    <texture border="12" colordiffuse="Panel">common/box.png</texture>
                </control>

                <control type="image">
                    <aspectratio scalediffuse="false">scale</aspectratio>
                    <animation effect="fade" start="100" end="33" time="0" condition="true">Conditional</animation>
                    <texture colordiffuse="Panel" diffuse="diffuse/wall-fanart-pics.png">$VAR[Image_Fanart]</texture>
                </control>

                <control type="wraplist" id="506">
                    <visible>$EXP[Exp_View_506]</visible>
                    <top>0</top>
                    <left>0</left>
                    <width>1760</width>
                    <right>0</right>
                    <top>0</top>
                    <bottom>0</bottom>
                    <onup condition="!Skin.HasSetting(global.kioskmode)">9000</onup>
                    <ondown>1641</ondown>
                    <focusposition>0</focusposition>
                    <onleft>51</onleft>
                    <onright>51</onright>
                    <preloaditems>0</preloaditems>
                    <pagecontrol>1641</pagecontrol>
                    <orientation>horizontal</orientation>

                    <viewtype label="Slider">list</viewtype>
                    <include>Animation_ScrolltimeViewsList</include>

                    <itemlayout height="640" width="1452">
                        <control type="image">
                            <top>0</top>
                            <right>-330</right>
                            <height>648</height>
                            <aspectratio scalediffuse="true">keep</aspectratio>
                            <texture background="true" diffuse="diffuse/lovefilmthumb-pics.png">$VAR[Image_Fanart]</texture>
                        </control>
                    </itemlayout>
                    <focusedlayout height="640" width="1452">
                        <control type="image">
                            <top>0</top>
                            <right>-330</right>
                            <height>648</height>
                            <aspectratio scalediffuse="true">keep</aspectratio>
                            <texture background="true" diffuse="diffuse/lovefilmthumb-pics.png">$VAR[Image_Fanart]</texture>
                        </control>
                    </focusedlayout>
                </control>

                <control type="image">
                    <left>0</left>
                    <right>0</right>
                    <bottom>0</bottom>
                    <height>70</height>
                    <texture colordiffuse="$VAR[Color_Background]">common/white.png</texture>
                </control>

                <control type="group">
                    <left>30</left>
                    <right>100</right>
                    <top>560</top>
                    <bottom>30</bottom>
                    <orientation>horizontal</orientation>
                    <control type="label">
                        <top>10</top>
                        <aligny>center</aligny>
                        <height>64</height>
                        <font>Tiny</font>
                        <scroll>true</scroll>
                        <textcolor>PanelWhite70</textcolor>
                        <selectedcolor>PanelWhite70</selectedcolor>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                    <control type="label">
                        <top>10</top>
                        <align>right</align>
                        <height>64</height>
                        <font>Tiny</font>
                        <scroll>true</scroll>
                        <textcolor>PanelWhite70</textcolor>
                        <selectedcolor>PanelWhite70</selectedcolor>
                        <label>$INFO[ListItem.Size]</label>
                        <right>-60</right>
                    </control>
                </control>
            </control>
            <control type="scrollbar" id="1641">
                <include content="Object_Scrollbar_Horizontal">
                    <param name="scrollid" value="1641"/>
                </include>
            </control>
        </control>
    </include>
</includes>
